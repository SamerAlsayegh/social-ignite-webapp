<div layout="row" layout-align="start center">
    <h1 class="md-display-1" flex>Account Setup</h1>
    <md-chips>
        <md-chip>Beta</md-chip>
    </md-chips>
</div>
<h3>We will guide you through;</h3>
<ol>
    <li>Choosing a package</li>
    <li>Adding your first page</li>
    <li>Scheduling your first post</li>
</ol>

<md-content ng-if="!loading || chosenPackage != null" layout-padding layout="{{chosenPackage != null ? 'column' : 'row'}}">
    <md-card ng-repeat="package in packages" ng-hide="(chosenPackage != null && chosenPackage != package.internal_name) || package.internal_name == subscription.package" ng-click="subscribePackage(package.internal_name)"
             class="package-card" layout="column">
        <md-card-title>
            <md-card-title-text>
                <span class="md-headline">{{package.name}}</span>
                <span class="md-subhead">{{package.cost.value | currency}} per {{(package.expiry.interval == 1 ? '' : package.expiry.interval + ' ') + package.expiry.type}}</span>

                <span flex layout="column" layout-align="start">
                                <ul flex>
                                    <li ng-repeat="feature in package.features">{{feature}}</li>
                                </ul>
                            </span>

            </md-card-title-text>
            <md-card-title-media>
                <i class="zmdi zmdi-paypal md-padding zmdi-hc-2x"></i>
            </md-card-title-media>
        </md-card-title>
        <md-card-actions layout="column" ng-if="chosenPackage == null" layout-align="stretch">
            <md-button class="md-primary md-raised">Subscribe</md-button>
        </md-card-actions>
    </md-card>
</md-content>
<md-content ng-if="loading" layout="column">
    <div layout="row">
                    <span>
                        <i class="zmdi zmdi-refresh-sync md-padding zmdi-hc-2x continious_rotation"></i>
                    </span>
        <h2>You will be redirected to PayPal shortly... please wait.</h2>
    </div>
</md-content>
