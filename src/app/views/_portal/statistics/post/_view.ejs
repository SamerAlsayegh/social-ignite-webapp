                    <div flex></div>
                    <small><span class="gray_text" am-time-ago="socialPost.post_time"></span></small>
                </div>
                <div layout="row" layout-align="stretch" class="dashboard-feed-content">
                    <span class="md-primary" layout-align="center center" ng-bind-html='toTrustedHTML( socialPost.content )'></span>
                </div>
                <div style="display: block;" class="text-right">
                    <md-button class="md-warn md-raised" ng-click="deletePost(socialPost._id)" aria-label="Delete across all pages">
                        Delete Post Across All Pages
                    </md-button>
                </div>
            </span>
