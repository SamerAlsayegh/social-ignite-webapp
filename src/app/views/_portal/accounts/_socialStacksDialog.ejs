<md-dialog aria-label="Social Stack" class="md-content" md-theme="{{theme}}" flex="40">
    <form name="stacks" ng-submit="submitPages()">
        <span layout="row" class="md-padding">
            <h3 flex>Brand Management</h3>
            <md-button class="md-icon-button" ng-click="cancel()">
                <i class="zmdi zmdi-close zmdi-hc-2x"></i>
            </md-button>
        </span>
        <div>
            <span class="hr"></span>
        </div>
        <!--<md-divider></md-divider>-->
        <md-dialog-content>
            <div class="md-dialog-content" flex>

                <div layout="column">
                    <md-input-container layout="column" class="md-block" layout-align="stretch">
                        <label>Brand name</label>
                        <input flex ng-model="data.name" required>
                    </md-input-container>

                    <label>
                        <h3>
                            <small>Select pages to add to brand...</small>
                        </h3>
                    </label>
                    <social-page-selector selected="selectedPages" social-pages="allPages" platforms="platforms"></social-page-selector>
                </div>
            </div>
        </md-dialog-content>
        <md-dialog-actions layout="row">
            <md-button ng-if="data._id != null" flex="50" flex-gt-md="20" ng-click="deleteStack()" class="md-warn">
                Delete
            </md-button>
            <md-button flex class="md-primary md-raised" type="submit">
                Apply
            </md-button>
        </md-dialog-actions>
    </form>
</md-dialog>
