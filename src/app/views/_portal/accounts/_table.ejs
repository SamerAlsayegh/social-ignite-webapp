<md-tabs md-center-tabs layout-fill md-selected="openTab" md-stretch-tabs="always" md-border-bottom md-autoselect md-swipe-content>
    <md-tab label="Pages" md-on-select="addPageActive = true" md-on-deselect="addPageActive = false">
        <md-content class="md-padding" layout="column" ng-controller="pagesController" layout-fill>
            <div>
                <%- include ./_socialPages.ejs %>
            </div>
            <span layout="row">
                <span flex></span>
                <md-fab-speed-dial class="tutorial_step_3 md-fab-bottom-right md-scale page-button" md-open="isOpen"
                                   ng-click="clickedSpeedDial()" md-direction="up">
                    <md-fab-trigger class="tutorial_step_2">
                        <md-button aria-label="menu" class="md-fab md-primary">
                            <md-tooltip md-direction="left">Add new profile</md-tooltip>
                            <i class="zmdi zmdi-accounts-add zmdi-hc-2x"></i>
                        </md-button>
                    </md-fab-trigger>
                    <md-fab-actions>
                        <md-button ng-repeat="platformDetails in socialPlatformDetails"
                                   ng-click="addSocialAccount(platformDetails.id);"
                                   class="md-fab md-raised md-padding md-mini ui-social ui-{{platformDetails.shortname}}"
                                   aria-label=platform>
                            <i class="zmdi zmdi-{{platformDetails.shortname}}"></i>
                        </md-button>
                    </md-fab-actions>
                </md-fab-speed-dial>
            </span>
        </md-content>
    </md-tab>
    <md-tab label="Statistics">
        <md-content class="md-padding" layout="column" ng-controller="pagesController" layout-fill>
            <div>
                <%- include ./_socialPagesStatistics.ejs %>
            </div>
        </md-content>

    </md-tab>
    <md-tab label="Brands" md-on-select="addStackActive = true" md-on-deselect="addStackActive = false">
        <md-content layout="column" ng-controller="socialStackController" layout-fill>
            <div class="md-padding">
                <%- include ./_socialStacks.ejs %>
            </div>
            <md-button ng-click="editSocialStack();"
                       class="md-fab md-primary page-button"
                       aria-label="Add a stack">
                <md-tooltip md-direction="left">New Brand</md-tooltip>
                <i class="zmdi zmdi-store zmdi-hc-2x"></i>
            </md-button>
        </md-content>

    </md-tab>
</md-tabs>


