<md-content ngf-drop="uploadFiles($files)"
            ngf-multiple="true"
            ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100"
            layout-padding layout="row" layout-align="center center" layout-wrap>

    <div layout="column" flex="100" flex-gt-md="33" style="min-width: 300px;" flex-gt-xs="50"
         layout-align="center center">
        <md-card ng-if="control == 'manage'" ngf-select="uploadFiles($files)" class="resource-card image-dragdropzone"
                 layout="column"
                 ngf-multiple="true"
                 ngf-accept="'image/*'" ngf-max-size="20MB" ngf-min-height="100">

            <div layout-align="center center" layout-fill layout="column">
                <span layout-align="center center" class="text-center">
                <md-icon class="md-48">image</md-icon>
                <h1>Click here</h1>
                <h1>Or</h1>
                <h1>Drag & Drop</h1>
                </span>
            </div>
        </md-card>
        <md-card ng-if="control == 'view'" ng-click="openSelectorForPost()" class="resource-card image-dragdropzone" layout="column">
            <div layout-align="center center" layout-fill layout="column">
                <span layout-align="center center" class="text-center">
                <md-icon class="md-48">image</md-icon>
                <h1>Browse gallery</h1>
                <h1>Or</h1>
                <h1>Drag & Drop</h1>
                </span>
            </div>
        </md-card>
    </div>


    <div layout="column" flex="100" flex-gt-md="33" style="min-width: 300px;" flex-gt-xs="50"
         ng-repeat="imageContent in images"
         layout-align="center center">

        <md-card ng-if="!imageContent.loading" flex layout-fill
                 class="resource-card resource-select" layout="column"
                 ng-style="{'background': (imageContent.used ? ('linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), ') : '') + ' url(' + imageContent.url + ')', 'background-position':'center center', 'background-repeat': 'no-repeat', 'background-size': 'cover'}"
                 layout-align="center center">

            <h1 class="white" layout-align="center center">{{imageContent.used ? 'Image has been used' : ''}}</h1>
            <div flex>
            </div>
            <md-content class="transparent-black" layout="row" layout-align="center center">
                <md-button class="md-icon-button" aria-label="Favorite">
                    <md-icon ng-click="favouriteImage(imageContent)"
                             ng-class="imageContent.favourite ? 'md-primary' : ''">favorite
                    </md-icon>
                </md-button>
                <md-button class="md-icon-button" aria-label="Delete">
                    <md-icon class="white" ng-click="deleteImage(imageContent)">delete</md-icon>
                </md-button>
                <md-button ng-if="control == 'manage'" class="md-icon-button" aria-label="Use for post">
                    <md-icon ng-click="useImage(imageContent)">add_circle</md-icon>
                </md-button>
